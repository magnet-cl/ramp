<!DOCTYPE html>
<html>
<head>
  <title>RAMP Prototype</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<header>
        <h1 id="logo"><a href="index.html"><img src="/assets/logo.png" alt="NED" /></a></h1>

        <%= form_for :post, url: posts_path, :class => 'search' do |f| %>
		    <p>
		      <%= f.label :search %><br>
		      <%= f.text_field :query, :class => 'textfield' %>
		    </p>
		   
		    <p>
		      <%= f.submit 'OK', :class => 'submitbtn' %>
		    </p>
		<% end %>

        <!--<form action="" class="search">
            <label for="">Buscar:</label>
            <input type="text" class="textfield" />
            <input type="submit" class="submitbtn" value="OK" />
        </form>-->
    </header>

<%= yield %>

</body>
</html>
